{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@types": ["./src/@types"],
      "@types/*": ["./src/@types/*"],
      "core": ["./src/core"],
      "core/*": ["./src/core/*"],
      "config/*": ["./src/config/*"],
      "hooks": ["./src/hooks"],
      "hooks/*": ["./src/hooks/*"],
      "helpers": ["./src/helpers"],
      "helpers/*": ["./src/helpers/*"],
      "screens/*": ["./src/screens/*"],
      "components/*": ["./src/components/*"],
      "containers/*": ["./src/containers/*"],
      "constants/*": ["./src/config/constants/*"],
      "locales/*": ["./public/locales/*"],
      "assets/*": ["./public/assets/*"],
      "styles/*": ["./styles/*"],
      "i18n/*": ["./i18n/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "typeAcquisition": {
    "include": ["jest"]
  }
}
